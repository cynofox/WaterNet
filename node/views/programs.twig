{% extends "layout.twig" %}
{% block content %}
<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Programs</h3>
	</div>
	<div class="panel-body">
		<button type="button" class="btn btn-success tip" data-container="body" data-toggle="popover" data-placement="auto top" data-trigger="hover" data-animation="true" data-content="Add a program." onclick="addProgramme()"><span class="glyphicon glyphicon-plus" data-container="body" data-toggle="popover" data-placement="auto top" data-trigger="hover" data-animation="true" data-content="Add a program."></span> Add</button>
		
		
		<div class="panel-group" id="accordion">
			<div class="panel panel-default">
				
				{% for program in state.programs %}
					{% include 'program.twig' %}
				{% endfor %}
			</div>
			
		</div>
	</div>
</div>
{% endblock %}