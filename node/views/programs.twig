{% extends "layout.twig" %}
{% block content %}
<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Programs</h3>
	</div>
	<form id="programForm" role="form" method="post" enctype="application/x-www-form-urlencoded">
		<div class="panel-body">
			{% if state.programs is empty %}
			<p>No programs exist, add one with the Add button below.</p>
			{% else %}
			<div class="panel-group" id="accordion">
				{% for program in state.programs %}
				{% include 'program.twig' %}
				{% endfor %}
			</div>
			{% endif %}
		</div>
		<div class="panel-footer">
			<button type="submit" name="formAction" value="save" class="btn btn-success" id="programFormSubmit"><span class="glyphicon glyphicon-floppy-disk" data-container="body" data-toggle="popover" data-placement="auto top" data-trigger="hover" data-animation="true" data-content="Save programs."></span> Save</button>
			<button type="submit" name="formAction" value="add" class="btn btn-success" id="programFormAdd"><span class="glyphicon glyphicon-plus" data-container="body" data-toggle="popover" data-placement="auto top" data-trigger="hover" data-animation="true" data-content="Add a program."></span> Add</button>
		</div>
	</form>
</div>
{% endblock %}